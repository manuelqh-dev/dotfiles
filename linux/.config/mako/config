# ~/.config/mako/config

# Duración en milisegundos de las notificaciones
timeout=5000

# Tamaño máximo de la notificación (ancho x alto en px)
max-width=320
max-height=100

# Separación entre notificaciones y los bordes de la pantalla (en px)
margin=10

# Espaciado entre notificaciones
spacing=10

# Fuente y tamaño
font=pango:JetBrains Mono 12

# Colores
background=#0D0D0D
text=#00FF66
border-color=#FF00A0
border-size=2

[urgency=critical]
background=#FF00A0
text=#0D0D0D
border-color=#FF00A0
timeout=8000

# Bordes (top, right, bottom, left) en px
border-width=2

# Bordes redondeados (en px)
border-radius=8

# Sombra
shadow-radius=12
shadow-offset-x=0
shadow-offset-y=2
shadow-opacity=0.25

# Opacidad de la notificación (0 a 1)
opacity=0.95
