# ~/.config/mako/config

# Duración en milisegundos de las notificaciones
timeout=5000

# Tamaño máximo de la notificación (ancho x alto en px)
max-width=320
max-height=100

# Separación entre notificaciones y los bordes de la pantalla (en px)
margin=10

# Espaciado entre notificaciones
spacing=10

# Fuente y tamaño
font=pango:JetBrains Mono Nerd Font 12

# Colores
background=#1e1e2e
text=#cdd6f4
border-color=#f5c2e7       
progress-color=#313244  
border-size=2

[urgency=low]
background-color=#181825  

[urgency=normal]
background-color=#1e1e2e  

[urgency=critical]
border-color=#fab387

# Bordes (top, right, bottom, left) en px
border-width=2

# Bordes redondeados (en px)
border-radius=8

# Sombra
shadow-radius=12
shadow-offset-x=0
shadow-offset-y=2
shadow-opacity=0.25

# Opacidad de la notificación (0 a 1)
opacity=0.95
